{
  "name": "redux-retry",
  "version": "0.0.2",
  "description": "Redux retry for easy state management of async calls",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/nimeshgurung/redux-retry.git"
  },
  "bugs": {
    "url": "https://github.com/nimeshgurung/redux-retry.git/issues"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "test": "jest",
    "test:debug": "jest --env=jsdom --watch --verbose false --no-watchman --runInBand",
    "test:coverage": "jest --coverage",
    "lint": "tslint 'src/**/*.tsx'",
    "tsc:check": "tsc --noEmit",
    "prettier": "prettier --parser typescript --write '**/*.ts'",
    "precommit": "lint-staged",
    "postversion": "git push origin master --tags --no-verify",
    "preversion": "npm run test && npm run build"
  },
  "author": "Nimesh Gurung",
  "license": "MIT",
  "devDependencies": {
    "@commercetools/enzyme-extensions": "^4.0.0",
    "@types/enzyme": "^3.1.15",
    "@types/jest": "23.3.13",
    "@types/node": "10.12.18",
    "@types/react": "^16.7.20",
    "@types/react-redux": "^7.0.0",
    "@types/redux": "^3.6.0",
    "@types/redux-saga": "^0.10.5",
    "@types/redux-thunk": "^2.1.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "husky": "1.3.1",
    "jest": "23.6.0",
    "lint-staged": "8.1.0",
    "prettier": "1.16.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-redux": "^6.0.0",
    "redux": "^4.0.1",
    "redux-saga": "^1.0.0",
    "redux-thunk": "^2.3.0",
    "rimraf": "2.6.3",
    "ts-jest": "23.1.4",
    "ts-node": "7.0.1",
    "tslint": "5.12.1",
    "tslint-config-prettier": "1.17.0",
    "tslint-react": "^3.6.0",
    "typescript": "3.2.4"
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "react-redux": "^6.0.0",
    "redux": "^4.0.0",
    "redux-saga": "^1.0.0",
    "redux-thunk": "^2.3.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --parser typescript --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "setupFiles": [
      "<rootDir>/setupTest.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/demo"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "keywords": [
    "react",
    "redux",
    "react-redux",
    "redux-saga",
    "redux-retry"
  ]
}
